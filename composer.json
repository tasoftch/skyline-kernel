{
  "name": "skyline/kernel",
  "license": "BSD-3-Clause",
  "minimum-stability": "dev",
  "authors": [
    {
      "name": "Thomas Abplanalp",
      "email": "info@tasoft.ch"
    }
  ],
  "autoload": {
    "psr-4": {
      "Skyline\\Kernel\\" : "src"
    },
    "files": [
      "lib/CoreFunctions.php",
      "lib/Constants.php"
    ]
  },
  "require" : {
    "php": "^7.2",
    "ext-PDO": "*",
    "ext-json": "*",
    "tasoft/config": "dev-master",
    "tasoft/service-manager": "dev-master",
    "tasoft/dependency-injection": "dev-master",
    "tasoft/event-manager": "dev-master",
    "tasoft/tools-path": "dev-master",
    "symfony/http-foundation": "dev-master"
  },
  "require-dev": {
    "phpunit/phpunit": "^6",
    "skyline/modules": "dev-master"
  },
  "scripts": {
    "post-package-install": [
      "Skyline\\Kernel\\Service\\PackageInstaller::install"
    ],
    "pre-package-uninstall": [
      "Skyline\\Kernel\\Service\\PackageInstaller::uninstall"
    ]
  }
}